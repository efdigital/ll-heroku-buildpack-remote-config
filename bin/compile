#!/bin/sh

export BUILD_DIR=$1
export HEROKU_BUILDPACK_REMOTE_CONFIG_API_TOKEN=`cat $3/HEROKU_BUILDPACK_REMOTE_CONFIG_API_TOKEN`
export HEROKU_BUILDPACK_REMOTE_CONFIG_APPS=`cat $3/HEROKU_BUILDPACK_REMOTE_CONFIG_APPS`
export HEROKU_BUILDPACK_REMOTE_CONFIG_KEYS=`cat $3/HEROKU_BUILDPACK_REMOTE_CONFIG_KEYS`

cd scripts && npm install && npm run compile